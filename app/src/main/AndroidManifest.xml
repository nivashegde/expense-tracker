<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csulb.quiztion">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity android:name="com.csulb.expensetracker.main.ExpensesList" />
        <activity android:name="com.csulb.expensetracker.charts.ItemReport" />
        <activity android:name="com.csulb.expensetracker.charts.SavingsReportActivity" />
        <activity android:name="com.csulb.expensetracker.charts.ExpenseReportActivity" />
        <activity android:name="com.csulb.expensetracker.main.AddExpenseAcitivity" />
        <activity android:name="com.csulb.expensetracker.navigation.SettingsActivity" />
        <activity android:name="com.csulb.expensetracker.navigation.EditProfile" />
        <activity android:name="com.csulb.expensetracker.navigation.AboutActivity" />
        <activity android:name="com.csulb.expensetracker.navigation.HelpActivity" />
        <activity android:name="com.csulb.expensetracker.navigation.ChangePasswordActivity" />
        <activity
            android:name="com.csulb.expensetracker.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.csulb.expensetracker.navigation.ForgotActivity" />
        <activity android:name="com.csulb.expensetracker.main.SignupActivity" />
        <activity android:name="com.csulb.expensetracker.main.LoginActivity" />
        <activity android:name="com.csulb.expensetracker.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>